{"ast":null,"code":"import DesktopArea from './components/os/DesktopArea.vue';\nimport TaskBar from './components/os/TaskBar.vue';\nimport SimpleWindow from './components/os/SimpleWindow.vue';\nimport { useOsStore } from './stores/os.store';\nexport default {\n  name: 'App',\n  components: {\n    DesktopArea,\n    TaskBar,\n    SimpleWindow\n  },\n  data() {\n    return {\n      osStore: null\n    };\n  },\n  methods: {\n    closeWindow(windowId) {\n      if (this.osStore) {\n        this.osStore.closeWindow(windowId);\n      }\n    },\n    minimizeWindow(windowId) {\n      if (this.osStore) {\n        this.osStore.minimizeWindow(windowId);\n      }\n    },\n    // ДОБАВЛЯЕМ метод для переключения максимизации\n    toggleMaximizeWindow(windowId) {\n      if (this.osStore) {\n        this.osStore.toggleMaximizeWindow(windowId);\n      }\n    },\n    focusWindow(windowId) {\n      if (this.osStore) {\n        this.osStore.activeWindowId = windowId;\n      }\n    }\n  },\n  created() {\n    this.osStore = useOsStore();\n  },\n  mounted() {\n    setTimeout(() => {\n      if (this.osStore) {\n        this.osStore.openWindow('notepad');\n      }\n    }, 500);\n  }\n};","map":{"version":3,"names":["DesktopArea","TaskBar","SimpleWindow","useOsStore","name","components","data","osStore","methods","closeWindow","windowId","minimizeWindow","toggleMaximizeWindow","focusWindow","activeWindowId","created","mounted","setTimeout","openWindow"],"sources":["/home/kup/my_projects/vue/osi/src/App.vue"],"sourcesContent":["<template>\n  <div class=\"webos\">\n    <DesktopArea>\n      <SimpleWindow\n        v-for=\"window in osStore.windows\"\n        :key=\"window.id\"\n        :windowId=\"window.id\"\n        :title=\"window.title\"\n        :appName=\"window.appName\"\n        :isMinimized=\"window.isMinimized\"\n        :isActive=\"osStore.activeWindowId === window.id\"\n        :isMaximized=\"window.isMaximized\"\n        @close=\"closeWindow\"\n        @minimize=\"minimizeWindow\"\n        @toggleMaximize=\"toggleMaximizeWindow\"\n        @focus=\"focusWindow\"\n      />\n    </DesktopArea>\n    <TaskBar />\n  </div>\n</template>\n\n<script>\nimport DesktopArea from './components/os/DesktopArea.vue'\nimport TaskBar from './components/os/TaskBar.vue'\nimport SimpleWindow from './components/os/SimpleWindow.vue'\nimport { useOsStore } from './stores/os.store'\n\nexport default {\n  name: 'App',\n  \n  components: {\n    DesktopArea,\n    TaskBar,\n    SimpleWindow\n  },\n  \n  data() {\n    return {\n      osStore: null\n    }\n  },\n  \n  methods: {\n    closeWindow(windowId) {\n      if (this.osStore) {\n        this.osStore.closeWindow(windowId)\n      }\n    },\n    \n    minimizeWindow(windowId) {\n      if (this.osStore) {\n        this.osStore.minimizeWindow(windowId)\n      }\n    },\n    \n    // ДОБАВЛЯЕМ метод для переключения максимизации\n    toggleMaximizeWindow(windowId) {\n      if (this.osStore) {\n        this.osStore.toggleMaximizeWindow(windowId)\n      }\n    },\n    \n    focusWindow(windowId) {\n      if (this.osStore) {\n        this.osStore.activeWindowId = windowId\n      }\n    }\n  },\n  \n  created() {\n    this.osStore = useOsStore()\n  },\n  \n  mounted() {\n    setTimeout(() => {\n      if (this.osStore) {\n        this.osStore.openWindow('notepad')\n      }\n    }, 500)\n  }\n}\n</script>\n\n<style scoped>\n.webos {\n  height: 100vh;\n  display: flex;\n  flex-direction: column;\n  overflow: hidden;\n}\n</style>"],"mappings":"AAuBA,OAAOA,WAAU,MAAO,iCAAgC;AACxD,OAAOC,OAAM,MAAO,6BAA4B;AAChD,OAAOC,YAAW,MAAO,kCAAiC;AAC1D,SAASC,UAAS,QAAS,mBAAkB;AAE7C,eAAe;EACbC,IAAI,EAAE,KAAK;EAEXC,UAAU,EAAE;IACVL,WAAW;IACXC,OAAO;IACPC;EACF,CAAC;EAEDI,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,OAAO,EAAE;IACX;EACF,CAAC;EAEDC,OAAO,EAAE;IACPC,WAAWA,CAACC,QAAQ,EAAE;MACpB,IAAI,IAAI,CAACH,OAAO,EAAE;QAChB,IAAI,CAACA,OAAO,CAACE,WAAW,CAACC,QAAQ;MACnC;IACF,CAAC;IAEDC,cAAcA,CAACD,QAAQ,EAAE;MACvB,IAAI,IAAI,CAACH,OAAO,EAAE;QAChB,IAAI,CAACA,OAAO,CAACI,cAAc,CAAC